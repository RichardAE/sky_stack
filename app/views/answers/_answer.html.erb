<%= div_for(answer) do %>
  <%= answer.text %><br>
  <%= link_to 'Edit Answer', edit_question_answer_path(@question, answer) %><br>
  <%= link_to "Delete", question_answer_path(@question, answer), method: :delete %>

  <%= render 'comments/form', commentable: answer, parent: @question %><br>

  <%= content_tag(:div, id: "answer_#{answer.id}_comments") do %>
    <%= render answer.comments, commentable: answer %><br>
  <% end %>
<% end %>

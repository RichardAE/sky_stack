<%= answer.text %><br>
<%= link_to 'Edit Answer', edit_question_answer_path(@question, answer) %><br>

<%= render 'comments/form', commentable: answer, parent: @question %><br>

<%= content_tag(:div, id: "answer_#{answer.id}_comments_list") do %>
  <% answer.comments.each do |comment| %>
    <%= render comment %><br>
  <% end %>
<% end %>

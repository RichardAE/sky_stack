<%= content_tag_for(:article, answer, class: 'question single-question question-type-normal') do %>
  <div class="question-inner">
    <div class="clearfix"></div>
    <div class="question-desc">
      <%= simple_format(answer.text) %>
    </div>
    <span class="question-date"><i class="icon-time"></i>
      <%= time_ago_in_words(answer.created_at) %> ago by <em><%= answer.user.user_name %></em>
    </span>
    <div class="clearfix"></div>
    <div>
      <%= link_to 'Edit Answer', edit_question_answer_path(@question, answer) if owner?(object: answer) %><br>
      <%= link_to "Delete", question_answer_path(@question, answer), method: :delete if owner?(object: answer) %>
    </div>
    <div class="clearfix"></div>

    <%= content_tag(:div, id: "answer_#{answer.id}_comments") do %>
      <%= render answer.comments, commentable: answer %><br>
    <% end %>

    <%= render 'comments/form', commentable: answer, parent: @question %><br>
  </div>
<% end %>

<div class="login">
  <div class="row">
    <div class="col-md-6">
      <div class="page-content">
        <h2>Register</h2>
        <div class="form-style form-style-3">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-inputs clearfix">
              <p>
                <label class="required">Username<span>*</span></label>
                <%= f.text_field :user_name, autofocus: true %>
              </p>
              <p>
                <label class="required">E-Mail<span>*</span></label>
                <%= f.email_field :email %>
              </p>
              <p>
                <label class="required">Password<span>*</span></label>
                <%= f.password_field :password, autocomplete: "off" %>
              </p>
              <p>
                <label class="required">Confirm Password<span>*</span></label>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </p>
            </div>
            <p class="form-submit">
              <%= f.submit "Sign up", class: "button color small" %>
            </p>
          <% end %>
        </div>
      </div><!-- End page-content -->
    </div><!-- End col-md-6 -->
    <div class="col-md-6">
      <div class="page-content">
        <h2>Login</h2>
        <p>The Login and Register pages will be merged, this is a tempoery comedy layout!</p>
        <%= link_to "Sign In", new_session_path(resource_name), class: "button small color" %>
      </div><!-- End page-content -->
    </div><!-- End col-md-6 -->
  </div><!-- End row -->
</div><!-- End login -->

<%= div_for(@question) do %>
  <%= @question.title %><br>
  <%= @question.text %><br>

  <%= link_to 'Edit Question', edit_question_path(@question) %><br>
  <%= link_to "Delete", question_path(@question), method: :delete %>


  Comments:<br>
  <%= content_tag(:div, id: "question_#{@question.id}_comments") do %>
    <%= render @question.comments, commentable: @question %>
  <% end %>

  <%= render 'comments/form', commentable: @question, parent: nil %><br>

  <%= render 'answers/form' %><br>

  <%= content_tag(:div, id: "question_#{@question.id}_answers") do %>
    <%= render @question.answers %>
  <% end %>
<% end %>
